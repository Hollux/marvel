{% extends "base.html.twig" %}

{% block title %}Index{% endblock %}

{% block metaDescription %}{{ parent() }}{% endblock %}

{% block body %}
    <div class="container">

        <h1>Index</h1>

        <div id="ajax">
            <div class="row">

                {% for char in tab.data.results %}
                <div class="col-sm-4">

                    <div class="panel panel-default modalPerso">
                        <div class="panel-heading text-center"><b>{{ char.name }}</b></div>

                        <div class="panel-body">
                            Panel content
                        </div>
                    </div>

                </div>

                    {% if loop.index is divisible by(3) %}
            </div>
            <div class="row">
                    {% endif %}

                {% endfor %}

            </div>

            <div id="pagination">

                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a id="previous" class="page-link {{ pagination.previous }}" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        {% for key,pag in pagination.number %}
                            {% if pag is not null%}
                                <li class="page-item {{ key == 4 ? 'active' : '' }} "><a class="page-link" data-info="{{ pag }}" href="#">{{ pag }}</a></li>
                            {% endif %}
                        {% endfor %}

                        <li class="page-item">
                            <a id="next" class="page-link {{ pagination.next }}" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>


            </div>

        </div>

    </div>

{% endblock %}

{% block javascripts2 %}
    {{ parent() }}

    <script>
        //pagination

        //suivant
        $("#previous").click(function() {
            //stop bootstrap
            event.preventDefault();

            console.log('previous');

            $.ajax({
                url: "{{ path('previous') }}",
                type: 'POST',
                success: function (msg) {
                    $('#ajax').html(msg);
                }
            });
        })


        //précédent
        $("#next").click(function() {
            //stop bootstrap
            event.preventDefault();

            console.log('next');

            $.ajax({
                url: "{{ path('next', { 'max': tab.data.total }) }}",
                type: 'POST',
                success: function (msg) {
                    $('#ajax').html(msg);
                }
            });
        })

        //ciblé
        $('.page-item').click(function() {
            //stop bootstrap
            event.preventDefault();

            console.log('page');

            //on retire la page principal
            if(!$(this).attr('class').includes('active')){

                var target = $(this).find("a").data('info')

                $.ajax({
                    url: "{{ path('page', {'max': tab.data.total }) }}",
                    data : {'x' : target},
                    type: 'POST',
                    success: function (msg) {
                        $('#ajax').html(msg);
                    }
                });
            }
        })

        //modalPersonnage
        $('.modalPerso').click(function() {
            console.log('clic');
        })

    </script>
{% endblock %}