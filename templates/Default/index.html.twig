{% extends "base.html.twig" %}

{% block title %}Index{% endblock %}

{% block metaDescription %}{{ parent() }}{% endblock %}

{% block body %}
    <div class="container">

        <h1>Index</h1>

        <div id="ajax">

            <div class="row">

                {% for char in tab.data.results %}
                <div class="col-sm-4">

                    <div class="panel panel-default">
                        <div class="panel-heading text-center"><b>{{ char.name }}</b></div>

                        <div class="panel-body">
                            Panel content
                        </div>
                    </div>

                </div>

                    {% if loop.index is divisible by(3) %}
            </div>
            <div class="row">
                    {% endif %}

                {% endfor %}

            </div>

            <div id="pagination">

                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a id="previous" class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        {% for key,pag in pagination %}
                            {% if pag is not null %}
                                <li class="page-item {{ key == 4 ? 'activPagination' : '' }} "><a class="page-link" data-info="{{ pag }}" href="#">{{ pag }}</a></li>
                            {% endif %}
                            {#{{ dump(pag) }}#}
                        {% endfor %}

                        <li class="page-item">
                            <a id="next" class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>


            </div>

        </div>

    </div>

{% endblock %}

{% block javascripts2 %}
    {{ parent() }}

    <script>

        //pagination

        //suivant
        $("#previous").click(function() {
            alert('previous');
        })


        //précédent
        $("#next").click(function() {
            alert('next');
        })

        //ciblé
        $('.page-item').click(function() {
            alert($(this).find("a").data('info'))
        })




    </script>
{% endblock %}